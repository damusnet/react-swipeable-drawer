{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "package-scripts.js",
          "rollup.config.js"
        ]
      }
    ],
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "react/forbid-prop-types": "off",
    "jsx-a11y/no-static-element-interactions": "off"
  },
  "globals": {
    "window": true
  },
  "env": {
    "jasmine": true,
    "jest": true
  }
}
